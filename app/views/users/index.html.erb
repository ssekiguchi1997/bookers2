<div class="container px-5 px-sm-0 mt-4">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(200,200) %>
      <table class="table">
        <thead>
          <tr>
            <th>name</name>
            <th><%= current_user.name %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>introduction</td>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="row justify-content-center mt-4">
          <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe, edit_user_path(current_user), class: "btn-wrapper col-10 nav-link text-dark text-center border border-dark rounded" %>
      </div><br>
      <div class="row">
        <h1>New Book</h1>
      </div>
      <div class="row">
        <%= form_with model: @book, method: :post do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title, class: "form-control" %><br>
          <h4>Opinion</h4>
            <%= f.text_area :body, class: "form-control" %><br>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</name>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user.id) do %>
                    <%= image_tag user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= link_to "Show", user_path(user.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>