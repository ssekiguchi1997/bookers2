<div>
  <%= flash[:notice] %>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="mx-auto col-9">
      <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title, autocomplete: "title",class:"col-9" %>
          <h4>Opinion</h4>
          <%= f.text_area :body, autocomplete: "body",class:"col-9" %><br>
          <%= f.submit 'Update Book', class:"mt-2 btn btn-success" %>
        <% end %>
        <div class="mt-3">
          <%= link_to "Show", book_path(@book) %>|<%= link_to "Back",books_path %>
        </div>
    </div>
  </div>
</div>    